LIBRARY 	IEEE;
USE 		IEEE.STD_LOGIC_1164.ALL;
USE 		IEEE.NUMERIC_STD.all;

ENTITY ball IS
	PORT 
	(	
		clk50		  	: IN  STD_LOGIC; -- 50 MHZ
		rst 		  	: IN  STD_LOGIC;
		v_sync		: IN  STD_LOGIC;
		pixel_x		: IN	STD_LOGIC_VECTOR (9 DOWNTO 0);
		pixel_y		: IN	STD_LOGIC_VECTOR (9 DOWNTO 0);
		player_x		: IN	STD_LOGIC_VECTOR (9 DOWNTO 0);
		player_y		: IN	STD_LOGIC_VECTOR (9 DOWNTO 0);
		ball_on  	: OUT STD_LOGIC
	);
END ball;

ARCHITECTURE behave OF ball IS

	-- constants - screen information
	CONSTANT SCREEN_OFFSET	:	UNSIGNED (9 DOWNTO 0)			:=	TO_UNSIGNED(8,   10);
	CONSTANT BORDER_SIZE		:	UNSIGNED (9 DOWNTO 0)			:=	TO_UNSIGNED(8,   10);
	CONSTANT MIN_X				:	UNSIGNED (9 DOWNTO 0)			:=	BORDER_SIZE + SCREEN_OFFSET;
	CONSTANT MIN_Y				:	UNSIGNED (9 DOWNTO 0)			:=	BORDER_SIZE + SCREEN_OFFSET;
	CONSTANT MAX_X				: 	UNSIGNED (9 DOWNTO 0) 			:= TO_UNSIGNED(640, 10) - BORDER_SIZE - SCREEN_OFFSET;
	CONSTANT MAX_Y				: 	UNSIGNED (9 DOWNTO 0) 			:= TO_UNSIGNED(480, 10) - BORDER_SIZE - SCREEN_OFFSET;
	
	-- constants - player info
	CONSTANT	BALL_SIZE		:	UNSIGNED (9 DOWNTO 0) 			:= TO_UNSIGNED(8,  10);

	-- BALL position
	SIGNAL 	pos_x_l			:	UNSIGNED (15 DOWNTO 0) 			:= "0100111100"; -- 316
	SIGNAL 	pos_y_t			:	UNSIGNED (15 DOWNTO 0) 			:= "0011101100"; -- 236

BEGIN

END behave;